<script>
    var urlParams = new URLSearchParams(window.location.search);
    var videoLink = urlParams.get('video');

    if (videoLink) {
        var player = new Clappr.Player({
            source: "https://vivo.b4xsports.online/?video=https://40.koora-live.video/hls/1/stream.m3u8",  // Use the dynamic videoLink from the URL
            mimeType: "application/x-mpegURL",
            autoPlay: true,
            height: "100%",
            width: "100%",
            watermark: "https://i.ibb.co/qCJmCXF/20221219-204952.png", // Watermark image URL
            watermarkLink: "https://chat.whatsapp.com/LedSvF9QeU9991e4l6A1R7", // Watermark clickable link
            position: 'top-right',
            plugins: [LevelSelector],  // Level Selector plugin
            parentId: "#vid"  // Container for the player
        });
    } else {
        console.error('Video link parameter "video" is missing in the URL.');
    }
</script>

